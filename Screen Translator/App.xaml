<Application
    x:Class="Screen_Translator.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Screen_Translator"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    StartupUri="/Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="background" Color="#2d2d2d" />
            <SolidColorBrush x:Key="foreground" Color="Transparent" />
            <x:Array x:Key="LocalizationLanguages" Type="sys:String">
                <sys:String>uk</sys:String>
                <sys:String>en</sys:String>
            </x:Array>
        </ResourceDictionary>
    </Application.Resources>
</Application>
